{
    "name": "mudd",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspaces/mudd",
    "remoteUser": "mudd",
    "containerEnv": {
        "CLAUDE_CONFIG_DIR": "${containerWorkspaceFolder}/.claude-user",
        "DATABASE_URL": "postgresql://mudd:mudd@db:5432/mudd"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "Anthropic.claude-code",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "GitHub.vscode-pull-request-github",
                "astral-sh.ty",
                "charliermarsh.ruff",
                "editorconfig.editorconfig",
                "ms-python.python",
                "ms-ossdata.vscode-pgsql"
            ]
        }
    },
    "postCreateCommand": {
        "uv": "uv sync && uv run lefthook install"
    }
}
